
@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Tesoreria</a></li>
        <li class="breadcrumb-item active" aria-current="page">Consultar Balance</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                Consultar Balance
            </div>
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Inicio:</label>
                            <input type="text" class="form-control form-control-sm model" id="txtFechaInicio" name="FechaInicio" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Fin:</label>
                            <input type="text" class="form-control form-control-sm model" id="txtFechaFin" name="FechaFin" autocomplete="off">
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="btnBuscar" class="col-form-label col-form-label-sm invisible">Direccion:</label>
                            <button id="btnMostrar" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscar()">Mostrar</button>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <table id="tbdata" class="table table-striped table-bordered nowrap compact invisible" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Ventas</th>
                                        <th>Compras</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6">

                            <figure class="highcharts-figure">
                                <div id="container"></div>
                                <p id="Descripcion" class="highcharts-description invisible">
                                    El Grafico Muestra la Cantidad de ventas(Ventas, Ventas por Cuenta Corriente y Ventas por Lista de precios) y las Compras hechas en Determinada Fecha
                                </p>
                            </figure>


                            <hr />
                        </div>
                        <div class="col-sm-6">

                            <figure class="highcharts-figure">
                                <div id="containerColumns"></div>
                                <p id="DescripcionC" class="highcharts-description invisible">
                                    El Grafico Muestra la Cantidad de ventas(Ventas, Ventas por Cuenta Corriente y Ventas por Lista de precios) y las Compras hechas en Determinada Fecha
                                </p>
                            </figure>

                            <hr />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <label class="input-group-text bg-info text-white invisible" id="lbl2" for="inputGroupSelect01">Detalle Ventas</label>
                        <br />
                        <table id="tbVentas" class="table table-striped table-bordered nowrap compact invisible" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Tipo Documento</th>
                                    <th>Codigo Documento</th>
                                    <th>Fecha Creacion</th>
                                    <th>Documento Cliente</th>
                                    <th>Nombre Cliente</th>
                                    <th>Total Venta</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <label class="input-group-text bg-info text-white invisible" id="lbl1" for="inputGroupSelect01">Detalle Compras</label>
                        <br />
                        <table id="tbCompras" class="table table-striped table-bordered nowrap compact invisible" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Numero Compra</th>
                                    <th>Proveedor</th>
                                    <th>Tienda Destino</th>
                                    <th>Fecha Compra</th>
                                    <th>Total Costo </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{

    <script src="@Url.Content("~/Scripts/Views/Tesoreria_Consultar.js")" type="text/javascript"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
}

